<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:gravity="bottom" android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/profiledefault"
            android:contentDescription="@string/nav_header_desc"
            android:id="@+id/userImageNavHeader"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/loginButtonNavDrawer"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="MariaG"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/userNameNavHeader"
            tools:text="MariaG"
            app:layout_constraintStart_toEndOf="@+id/userImageNavHeader" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/userImageNavHeader" android:textColor="@android:color/white"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userEmailNavHeader"
            android:text="masha@google.com" app:layout_constraintStart_toEndOf="@+id/userImageNavHeader"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userNameNavHeader" android:textColor="@android:color/white"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/loginButtonNavDrawer"
            android:background="@android:color/transparent" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/white"
            android:onClick="loginButtonNavClicked" android:textAlignment="center" android:layout_marginStart="5dp"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/addchannelbutton"
            android:id="@+id/addChannelButton"
            android:background="@android:color/transparent" android:scaleType="fitXY" android:padding="5dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="addChannelClicked"/>

</android.support.constraint.ConstraintLayout>
